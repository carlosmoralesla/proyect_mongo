 

<h1>Banks / <%= link_to "People",people_path %></h1>
<div class="well">
  <%= link_to "New Bank", new_bank_path, class: "btn btn-primary" %>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Money type</th>
      <th>Number account</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @banks.size == 0 %>
      <tr>
        <td colspan="6">No banks found.</td>
      </tr>
    <% else %>
      <% @banks.each do |bank| %>
        <tr>
          <td><%= bank.name %></td>
          <td><%= bank.money_type %></td>
          <td><%= bank.number_account %></td>
          <td>
            <%= link_to "Edit", edit_bank_path(bank), class: "btn btn-default" %>
          </td>
          <td>
            <%= button_to "Delete", bank, method: :delete, data: { confirm: "Are you sure you wish to delete  ?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>